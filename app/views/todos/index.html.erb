<%= link_to "Create a new todo", new_todo_path %>

<ul class="todos">
  <% @todos.each do |todo| %>
    <li class="<%= "completed" if todo.complete? %>">
      <p><%= todo.title %></p>
      <% if todo.complete? %>
        <%= button_to "Mark incomplete", todo_completion_path(todo), method: :delete %>
      <% else %>
        <%= button_to "Complete", todo_completion_path(todo) %>
      <% end %>
    </li>
  <% end %>
</ul>